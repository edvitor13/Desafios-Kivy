# GridLayout dos Blocos do Jogo da Memória
<GridMemoria@GridLayout>:
    padding: '5dp', '100dp', '5dp', '5dp'
    spacing: '5dp'
    cols: 2

# Label de exibição de texto na tela
<LabelSaida@Label>:
    size_hint: 1, None
    height: '100dp'
    font_size: '30dp'
    pos_hint: {'top':1}
    color: .1, .1, .1, .8

# "Botão" responsável pelas imagens
<BotaoMemoria@BoxLayout>:
    canvas.before:
        Color:
            rgba: .3, .4, .8, 1
        Rectangle:
            size: self.size
            pos: self.pos

# Botão responsável por ocultar as imagens e interagir   
<BotaoSecreto@Button>:
    background_normal: ''
    background_down: ''
    background_color: .4, .4, .4, 1
    text: '?'
    font_size: '80dp'

# Botão responsável pelo começo do jogo
<BotaoInicial@Button>:
    background_normal: ''
    background_down: ''
    background_color: .3, .4, .8, 1
    on_press: self.background_color = .2, .2, .2, 1
    on_release: self.background_color = .3, .4, .8, 1
    text: 'Começar!'
    size_hint: .9, None
    height: '100dp'
    font_size: '30dp'
    pos_hint: {'center_x':.5, 'center_y':.5}

# "Tela" de espera enquanto o jogo está recomeçando
# E responsável por exibir a mensagem "Embaralhando"
<TelaDeEspera@BoxLayout>:
    padding: '5dp', '100dp', '5dp', '5dp'
    
    Label:
        size_hint: 1, 1
        canvas.before:
            Color:
                rgba: .3, .4, .8, 1
            Rectangle:
                size: self.size
                pos: self.pos
        text: 'Embaralhando...'
        font_size: '30dp'

# Tela Principal
<TelaJogo@Screen>:
    FloatLayout:
        id: blocos_memoria
        BotaoInicial:
            on_release: root.iniciar()
    LabelSaida:
        id: ls
        text: 'Jogo da Memória'
